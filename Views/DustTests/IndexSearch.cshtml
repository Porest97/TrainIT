@model IEnumerable<TrainIT.Models.DataModels.DustTest>
@{
    ViewData["Title"] = "IndexSearch";
}


    <div class="badge">

        <h3>D.A.S Tests (DAST)</h3>

        <p><a class="btn btn-sm btn-outline-success" asp-controller="DustTests" asp-action="Create">Register new test</a></p>

        <form asp-controller="DustTests" asp-action="IndexSearch">
            <p>
                Search for Person,  
                @Html.DisplayNameFor(model => model.TestedPerson.FirstName): <input type="text" name="SearchString">
                @Html.DisplayNameFor(model => model.TestedPerson.LastName): <input type="text" name="SearchString1">
                <input type="submit" value="Search" />
            </p>
        </form>
